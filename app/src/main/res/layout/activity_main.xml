<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="输入想要生成联系人的数量，\n然后按「完成」即可"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/grey_text"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.mtjin.library.BorderEditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="请输入要生成联系人的数量"
        android:inputType="number"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:border_background_color="@color/grey_bg"
        app:border_corner_radius="28dp"
        app:border_focused_activated="false"
        app:border_stroke_width="0dp" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/more_action_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/grey_bg"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:minWidth="84dp"
            android:padding="16dp"
            android:text="更多设置"
            android:textColor="@color/secondary_text_color_dark"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/action_button"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/design_default_color_primary_variant"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center"
        android:minWidth="84dp"
        android:padding="16dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/foot_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/secondary_text_color_dark"
        android:textSize="10sp" />




</LinearLayout>